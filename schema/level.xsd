<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="grid">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="row">

                    <xs:complexType>
                        <xs:sequence>
                            <xs:element name="col">
                                <xs:complexType>
                                    <xs:simpleContent>
                                        <xs:extension base="xs:string">
                                            <xs:attribute type="xs:integer" name="col"/>
                                            <xs:attribute type="xs:boolean" name="mine" use="optional"/>
                                        </xs:extension>
                                    </xs:simpleContent>
                                </xs:complexType>
                            </xs:element>
                        </xs:sequence>
                        <xs:attribute type="xs:integer" name="row"/>
                    </xs:complexType>

                </xs:element>
            </xs:sequence>
        </xs:complexType>
    </xs:element>
</xs:schema>